{
  "env": {
    "browser": true,
    "es2021": true
  },
  "plugins": ["sonarjs", "no-use-extend-native", "promise", "prettier"],
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:sonarjs/recommended",
    "plugin:no-use-extend-native/recommended",
    "plugin:promise/recommended",
    "prettier"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "quotes": ["error", "single"],
    "prettier/prettier": "error",
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "lines-between-class-members": [
      "error",
      "always",
      {
        "exceptAfterSingleLine": true
      }
    ],
    "class-methods-use-this": "off",
    "no-underscore-dangle": ["error", { "allow": ["_group", "_subcommand", "_hoistedOptions"] }],
    "global-require": "off",
    "import/no-dynamic-require": "off"
  }
}
